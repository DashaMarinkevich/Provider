<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="entity.Contract" table="contract">
      <meta attribute="class-description">
         This class contains the contract detail. 
      </meta>
      <id name="id" type="int" column="numContract">
         <generator class="native"/>
      </id>
      <property name="dateContract" column="dateContract" type="string"/>
      <property name="statusContract" column="statusContract" type="string"/>
     
   </class>
</hibernate-mapping>